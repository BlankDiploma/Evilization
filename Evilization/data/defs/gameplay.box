UIBoxDef Gameplay
{
	fWidthPct 1.0
	fHeightPct 1.0

	eaChildren CityLabelLayout
	{
		Anchor Top Left
	}
	eaChildren Minimap
	{
		Anchor Bottom right
	}
	eaChildren UnitPane
	{
		Anchor Bottom left
	}
	eaChildren TechInfo
	{
		Anchor Top Left
	}
	eaChildren NotificationLayout
	{
		Anchor Bottom Right
		Y -292
	}
	eaChildren TopInfoBar
	{
		Anchor Top Right
	}
}

UITextDef TopInfoBar
{
	fWidthPct 0.9
	Height 18
	eType Text
	eaLayers Ninepatch
	{
		hTex interfacenines
		ninepatchIdx 10
	}
	textFlags CenterY
	textFunc <& return Player_FormatTopInfoBar() &>
	hFont courier_new
	textcolor 255 255 255
	fIconScale 0.5
}

UILayoutDef CityLabelLayout
{
	listFunc <& return Gameplay_GetOnscreenTilesWithCities() &>
	pointFunc <& return Gameplay_TilePtToScreen(Tile_GetLoc(Layout_GetVarAsTile())) &>
	fWidthPct 1.0
	fHeightPct 1.0
	eType Layout
	eLayoutType LUA
	eaChildren CityLabel
	{
		X 0
		Y -32
		Anchor top left
	}
}

UIButtonDef CityLabel
{
	Width 128
	Height 24
	eType Button
	
	eaLayers Ninepatch
	{
		hTex interfacenines
		ninepatchIdx 4
		mouseoverIdx 5
		pressedIdx 6
	}
	clickFunc <& City_DetailedView(Tile_GetCity(Layout_GetVarAsTile())) &>
	
	textFlags CenterX CenterY
	textFunc <& return City_FormatString(Tile_GetCity(Layout_GetVarAsTile()), "{name}") &>
	hFont courier_new
	textcolor 0 255 0
}

